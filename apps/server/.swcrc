{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "dynamicImport": true,
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "esnext",
    "externalHelpers": false,
    "keepClassNames": true,
    "loose": false,
    "minify": {
      "compress": false,
      "mangle": false
    },
    "baseUrl": "./",
    "paths": {
      "@api/*": ["src/*"],
      "@edusama/common/*": ["../../../packages/common/dist"]
    }
  },
  "module": {
    "type": "commonjs"
  }
}
