{
  "name": "@edusama/common",
  "private": true,
  "version": "0.0.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "npx rimraf dist",
    "check-types": "tsc --noEmit",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "lint": "yarn run eslint . --ext .ts,.tsx,.js,.jsx,.json",
    "lint-fix": "yarn lint --fix",
    "lint-all": "yarn check-types && yarn check-format && yarn lint",
    "fix": "yarn format && yarn lint-fix"
  },
  "dependencies": {
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@edusama/eslint": "*",
    "@edusama/prettier": "*",
    "@edusama/tsconfig": "*",
    "@types/node": "^22.15.18",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs"
}